root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.{gradle,xml,storyboard,xcconfig}]
indent_size = 4

[*.{xcworkspacedata,xcscheme}]
indent_size = 3

[*.{plist,xcsettings,pbxproj}]
indent_style = tab

[*.conf]
indent_size = 4
